@model InternetApplicationProject.Models.Project

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<style>
    .form-control{
            border: 1px none #ccc;
    }
</style>
<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-6">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Add Project</h3>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                <form role="form">
                    @using (Html.BeginForm())
                    {
                        <div class="box-body">
                            <div class="form-group">
                                @Html.LabelFor(x => x.ProjectName,new { @class="form-control"})
                                @Html.EditorFor(x => x.ProjectName)
                                @Html.ValidationMessageFor(x => x.ProjectName)
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(x => x.ProjectDescription,new { @class="form-control"})
                                @Html.EditorFor(x => x.ProjectDescription)
                                @Html.ValidationMessageFor(x => x.ProjectDescription)
                            </div>
                        </div>


                        <!-- /.box-body -->
                        <div class="box-footer">
                            <input type="submit" value="Submit" class="btn btn-primary">
                        </div>
                    }
                </form>
            </div>
        </div>
        </div>
</section>
<!-- /.box -->
